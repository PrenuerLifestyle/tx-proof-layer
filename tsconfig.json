{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "dist",
    "rootDir": "src",

    "resolveJsonModule": true
  },
  "include": ["src", "test-proof.ts"],
  "exclude": ["node_modules"]
}
